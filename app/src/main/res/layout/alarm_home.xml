<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000">

    <!--        android:layout_alignParentLeft="true"-->
    <!--        android:layout_alignParentTop="true"-->

    <!-- RecyclerView for displaying alarm items -->

    <TextView
        android:id="@+id/kick"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="41dp"
        android:gravity="left"
        android:text="@string/app_name"
        android:textAppearance="@style/kickTextStyle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAlarms"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 알람 추가 버튼 -->
    <!--        android:background="@drawable/ic_add"-->

    <Button
        android:id="@+id/btnAddAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom|center"
        android:contentDescription="Add Alarm Button"
        android:text="@string/add_button" />

    <Button
        android:id="@+id/btntestface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom|center"
        android:contentDescription="Face Test"
        android:text="@string/test_button" />
</LinearLayout>